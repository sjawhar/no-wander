  "version": "0.2.0",
  "configurations": [
    {
      "name": "Record: Monitor",
      "type": "python",
      "request": "launch",
      "module": "no_wander",
      "args": ["record", "--monitor", "1"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "port": 3000,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/opt/no_wander"
        }
      ],
      "justMyCode": false
    }
  ]
}
